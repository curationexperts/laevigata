<div class="committee-member row first">
  <div class="col-sm-6 member">
    <%= f.fields_for :committee_members do |c| %>
    <% emory_faculty = ["Emory Faculty", "Non-Emory Faculty"] %>
    <%= c.input "affiliation_type", selected: "Emory Faculty", required: false, label: "Committee Member's Affiliation",
         collection: emory_faculty,
          input_html: { class: 'form-control committee-member-select' } %>
    <%= c.input :affiliation, disabled: true, required: false, label: false, input_html: { class: 'form-control committee',  data: { affiliation: 'members'}, value: "Emory"} %>
  </div>

  <div class="col-sm-6 member-affiliation">
    <%= c.input :name, label: "Committee Member", required: false, placeholder: 'Last Name, First Name', input_html: { class: 'form-control committee' } %>
  </div>
  <% end %>
</div>

